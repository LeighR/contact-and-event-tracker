<h1>Addding Contacts to Group: <%= @contact_group.name %></h1>

<% form_tag add_contacts_contact_group_path(@contact_group) do %>
  <table class="nice_table">
    <tr>
      <th>Login (Full Name)</th>
      <th>Email</th>
      <th></th>
    </tr>

  <% @contacts_not_in_group.each do |contact|  %>
    <tr>
      <td><%= link_to contact.name, :action => 'edit', :id => contact %></td>
      <td><%= contact.email %></td>
      <td><%= check_box_tag "contact_ids[]", contact.id %></td>
    </tr>
  <% end %>
  </table>
  <p style="text-align:right">
    <%= submit_tag "add selected contacts to this group" %>
  </p>
<% end %>


<p class="admin_links">
  <%= link_to 'edit group name', edit_contact_group_path(@contact_group) %> |
  <%= link_to 'list contacts in this group', @contact_group %> |
  <%= link_to 'list of contact groups', contact_groups_path %>
</p>